{
  "name": "@rune-langium/core",
  "version": "0.1.0",
  "description": "Langium-based parser and typed AST for the Rune DSL (.rosetta files)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "!src/**/*.test.ts"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "generate": "langium generate",
    "lint": "oxlint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "langium": "^4.2.0"
  },
  "devDependencies": {
    "langium-cli": "^4.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pradeepmouli/rune-langium.git",
    "directory": "packages/core"
  },
  "keywords": [
    "rune",
    "rosetta",
    "dsl",
    "langium",
    "parser",
    "ast",
    "cdm",
    "isda"
  ]
}
